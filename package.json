{
  "name": "standard_conf",
  "version": "1.0.0",
  "description": "project standard conf",
  "main": "dist/index.js",
  "files": [
    "dist",
    "types"
  ],
  "author": "chen",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prebuild": "npm run lint && npm run prettier && npm run test",
    "build": "rimraf dist types && gulp",
    "log": "rimraf CHANGELOG.md && conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "lint": "eslint src --max-warnings 0",
    "prettier": "prettier src test --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@typescript-eslint/eslint-plugin": "^3.10.0",
    "@typescript-eslint/parser": "^3.10.0",
    "conventional-changelog-cli": "^2.1.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.2.5",
    "merge2": "^1.4.1",
    "prettier": "^2.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run prettier",
      "npm run test"
    ]
  }
}
